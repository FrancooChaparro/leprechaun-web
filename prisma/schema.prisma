generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}
model User {
  id   String @id @default(uuid())
  name String

   @@map("users")
}

model Product {
  id            String   @id @default(uuid())
  name          String
  description   String
  image         String
  amount        Int
  price         Float
  unitPrice     Float
  stock         Int
  marca         String? // Campo opcional
  subname       String? // Campo opcional
  rubro         String[] // Array de strings opcional
  subtitle      String
  urlCategory   String
  urlProduct    String
  titleCategory String
  pricears      String
  createdAt     DateTime @default(now()) // Registro de fecha de creación
  updatedAt     DateTime @updatedAt // Registro de fecha de actualización

  @@map("products") // Nombre de tabla en la base de datos
}
